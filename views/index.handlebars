{{!-- This is the template that gets inserted into main.handlebars --}}

<h1 class="text-center">Eat Da Burger</h1>
<h2 class="text-center">🍔</h2>
<div class="container">
    <div class="row">
        {{!--
        <!-- {{!Left div that contains burgers submitted from form }} --> --}}
        <div class="col-md-4">
            <div id="burgerstoeat" class="card burgercard">
                <div class="card-title">Burgers to Eat</div>
                <div class="cardbody">
                    <ul class="list-group">
                        {{#each burgers}}
                        <li class="list-group-item">
                            {{burger_name}} <button class="btn btn-primary">Devour</button>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>


        </div>
        {{!--
        <!-- {{!Center div that contains a form with submit button }} --> --}}
        <div class="col-md-4">
            <div>
                <form>
                    <div class="form-group">
                        <label for="submitBurger" class="text-center">Create a Burger!</label>
                        <input type="textarea" class="form-control" id="burgerInput"
                            placeholder="Enter your burger if you dare!" />
                    </div>
                    <button id="submitBtn" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        {{!--
        <!-- {{!Right div that conatins burgers that were eaten }} --> --}}
        <div class="col-md-4">
            <div id="burgerseaten" class="card burgercard">
                <div class="card-title">Burgers Eaten</div>
                <div class="cardbody">
                    <ul class="list-group">
                        {{#each burgers}}
                        {{#if devoured}}
                        <li class="list-group-item">
                            {{burger_name}}
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                    
                </div>
            </div>
        </div>
    </div>



</div>